        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="180dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/social_login_kakao_btn"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/auth_button_pattern"
                android:backgroundTint="@color/kakao_color"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="80dp"
                    android:background="@drawable/auth_button_pattern"
                    android:src="@drawable/social_login_logo_kakao" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kakao_login"
                    android:textAppearance="@style/social_login_kakao_button" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/social_login_facebook_btn"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:background="@drawable/auth_button_pattern"
                android:backgroundTint="@color/facebook_color"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="70dp"
                    android:background="@drawable/auth_button_pattern"
                    android:src="@drawable/social_login_logo_facebook" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/facebook_login"
                    android:textAppearance="@style/social_login_facebook_button" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>