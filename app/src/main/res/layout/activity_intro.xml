<!--            app:dotsCornerRadius="4dp"-->
<!--            app:dotsSize="8dp"-->
<!--            app:dotsSpacing="6dp"-->
<!--            app:dotsStrokeWidth="2dp"-->
<!--            app:dotsStrokeColor="@color/indicator_stroke_color"-->
